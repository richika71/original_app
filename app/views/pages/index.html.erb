<p id="notice"><%= notice %></p>
<div class=pageall>
  <div class=pagehead>
    <h1><%= t('page') %> </h1> <%= link_to 'New Food', new_page_path %>
  </div>

  <br>
  <div class=pagebody>
    <table>
      <thead>
        <tr>
          <th>Food</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <% @pages.each do |page| %>
            <tr>
              <% if user_signed_in? && page.user_id == current_user.id %>
                <td><%= page.food %></td>
                <td><%= page.date %></td>
                <th><%= link_to 'Edit', edit_page_path(page) %></th>
                <th><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></th>
              <% end %>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>

  <br>

</div>
